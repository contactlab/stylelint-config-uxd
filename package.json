{
  "name": "stylelint-config-uxd",
  "version": "1.0.0",
  "title": "Contactlab UXD Stylelint",
  "description": "Stylelint configuration used in Contactlab projects.",
  "license": "MIT",
  "homepage": "https://github.com/contactlab/stylelint-config-uxd",
  "repository": {
    "type": "git",
    "url": "https://github.com/contactlab/stylelint-config-uxd"
  },
  "bugs": {
    "url": "https://github.com/contactlab/stylelint-config-uxd/issues"
  },
  "author": {
    "name": "Contactlab UXD Team",
    "email": "uxd@contactlab.com",
    "homepage": "https://contactlab.com/"
  },
  "contributors": [
    "Giovanni Tramutola <giovanni.tramutola@contactlab.com>",
    "Mattia Astorino <mattia.astorino@contactlab.com"
  ],
  "keywords": [
    "code checker",
    "code linter",
    "code standards",
    "code style",
    "contactlab",
    "lint",
    "postcss",
    "style checker",
    "style linter",
    "stylelint",
    "stylelint-config",
    "stylelintconfig"
  ],
  "engines": {
    "node": ">=9.5.0",
    "npm": ">=5.6.0"
  },
  "main": "./src/index.js",
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": false
    },
    "extends": "contactlab"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  },
  "scripts": {
    "lint:md": "remark . --quiet --frail || true",
    "lint:js": "eslint \"./src/**/*.js\" || true",
    "lint:css": "stylelint \"./examples/**/*.{css,pcss}\" --cache || true",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "dry-release": "npmpub --dry --verbose",
    "release": "npmpub"
  },
  "devDependencies": {
    "eslint": "4.17.0",
    "eslint-config-contactlab": "1.0.0",
    "jest": "22.2.2",
    "npm-run-all": "4.1.2",
    "npmpub": "3.1.0",
    "remark-cli": "5.0.0",
    "remark-preset-lint-consistent": "2.0.1",
    "remark-preset-lint-recommended": "3.0.1",
    "stylelint": "8.4.0",
    "stylelint-config-standard": "18.0.0"
  }
}
