{
  "name": "@contactlab/stylelint-config-uxd",
  "version": "1.1.3",
  "title": "Contactlab UXD Stylelint",
  "description": "Stylelint configuration used in Contactlab projects.",
  "license": "MIT",
  "homepage": "https://github.com/contactlab/stylelint-config-uxd",
  "repository": {
    "type": "git",
    "url": "https://github.com/contactlab/stylelint-config-uxd"
  },
  "bugs": {
    "url": "https://github.com/contactlab/stylelint-config-uxd/issues"
  },
  "author": {
    "name": "Contactlab UXD Team",
    "email": "uxd@contactlab.com",
    "homepage": "https://ux.contactlab.com/"
  },
  "contributors": [
    "Giovanni Tramutola <giovanni.tramutola@contactlab.com>",
    "Mattia Astorino <mattia.astorino@contactlab.com>"
  ],
  "keywords": [
    "code checker",
    "code linter",
    "code standards",
    "code style",
    "contactlab",
    "lint",
    "postcss",
    "style checker",
    "style linter",
    "stylelint",
    "stylelint-config",
    "stylelintconfig"
  ],
  "engines": {
    "node": ">= 8.5.x",
    "yarn": ">= 1.5.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "main": "./lib/index.js",
  "jest": {
    "testEnvironment": "jsdom",
    "verbose": true
  },
  "semistandard": {
    "env": [
      "browser",
      "node",
      "jest"
    ],
    "ignore": [
      "config/element/scaffold-*"
    ]
  },
  "scripts": {
    "prelint:js": "shx echo '\n  ðŸ’…  Running Javascript lint...  \n' | chalk magentaBright",
    "lint:js": "semistandard --verbose | snazzy || true",
    "prelint:css": "shx echo '\n  ðŸ’…  Running CSS lint...  \n' | chalk magentaBright",
    "lint:css": "stylelint \"./examples/**/*.{css,pcss}\" --config \"./src/index.js\" || true",
    "lint": "yarn lint:js && yarn lint:css",
    "preunit": "shx echo '\n  â›‘  Running unit tests...  \n' | chalk magentaBright",
    "unit": "jest",
    "unit:watch": "jest --watch",
    "unit:coverage": "jest --coverage",
    "test": "yarn lint && yarn unit",
    "prebuild": "shx echo '\n  ðŸ“¦  Building rules...  \n' | chalk yellowBright",
    "build": "shx rm -rf lib && shx mkdir lib && shx cp './src/*' './lib/'",
    "postbuild": "shx echo '\n  âœ…  Rules build completed!  \n' | chalk greenBright",
    "prerelease": "shx echo '\n  ðŸš€  Release on NPM and GitHub...  \n' | chalk cyanBright",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  },
  "dependencies": {
    "stylelint": "9.2.0",
    "stylelint-config-standard": "18.2.0"
  },
  "devDependencies": {
    "chalk": "2.3.2",
    "chalk-cli": "4.0.0",
    "jest": "22.4.3",
    "semistandard": "12.0.1",
    "shx": "0.2.2",
    "snazzy": "7.1.1",
    "standard-version": "4.3.0"
  }
}
