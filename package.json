{
  "name": "@contactlab/stylelint-config-uxd",
  "version": "1.1.0",
  "title": "Contactlab UXD Stylelint",
  "description": "Stylelint configuration used in Contactlab projects.",
  "license": "MIT",
  "homepage": "https://github.com/contactlab/stylelint-config-uxd",
  "repository": {
    "type": "git",
    "url": "https://github.com/contactlab/stylelint-config-uxd"
  },
  "bugs": {
    "url": "https://github.com/contactlab/stylelint-config-uxd/issues"
  },
  "author": {
    "name": "Contactlab UXD Team",
    "email": "uxd@contactlab.com",
    "homepage": "https://contactlab.com/"
  },
  "contributors": [
    "Giovanni Tramutola <giovanni.tramutola@contactlab.com>",
    "Mattia Astorino <mattia.astorino@contactlab.com"
  ],
  "keywords": [
    "code checker",
    "code linter",
    "code standards",
    "code style",
    "contactlab",
    "lint",
    "postcss",
    "style checker",
    "style linter",
    "stylelint",
    "stylelint-config",
    "stylelintconfig"
  ],
  "engines": {
    "node": ">=9.5.0",
    "npm": ">=5.6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./lib/index.js",
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": false
    },
    "extends": "contactlab"
  },
  "scripts": {
    "lint:js": "shx echo \"——— Lint JS ———\" && eslint \"./src/**/*.js\" || true",
    "lint:css": "shx echo \"——— Lint CSS ———\" && stylelint \"./examples/**/*.{css,pcss}\" --config \"./src/index.js\" || true",
    "lint": "npm run lint:js && npm run lint:css",
    "pretest": "npm run lint",
    "test": "shx echo \"——— Test Rules ———\" && jest",
    "test:watch": "shx echo \"——— Test Rules Watch ———\" && jest --watch",
    "prebuild": "npm run test",
    "build": "shx rm -rf lib && shx mkdir lib && shx cp src/* lib",
    "prerelease": "git checkout master && git pull origin master",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  },
  "devDependencies": {
    "eslint": "4.17.0",
    "eslint-config-contactlab": "1.0.0",
    "jest": "22.3.0",
    "shx": "0.2.2",
    "standard-version": "4.3.0",
    "stylelint": "8.4.0",
    "stylelint-config-standard": "18.0.0"
  }
}
